<resources>

    <style name="Theme.Musical" parent="Theme.Musical.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Musical.Light" parent="Theme.Musical.Base.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Musical.Black" parent="Theme.Musical.Base.Black">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Musical.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.Musical.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:padding">0dp</item>
    </style>

    <style name="Fab" parent="FabParent">
        <item name="android:transitionName">@string/transition_fab</item>
    </style>

</resources>