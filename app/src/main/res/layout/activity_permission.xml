<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingHorizontal="32dp"
                android:paddingTop="32dp"
                tools:targetApi="o" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/intro_text_background"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.o4x.musical.views.TransparentTextView
                        android:id="@+id/trans_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="?backgroundColor"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:text="@string/app_name" />

                    <com.o4x.musical.views.TransparentTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="?backgroundColor"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:text="@string/just_another"/>

                </LinearLayout>

            </FrameLayout>

            <com.o4x.musical.views.BaselineGridTextView
                android:id="@+id/appNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/app_name"
                android:textAppearance="@style/TextViewHeadline6"
                android:textColor="?android:attr/textColorPrimary"
                app:lineHeightHint="32sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerHorizontal" />

            <com.o4x.musical.views.PermissionItem
                android:id="@+id/storagePermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:permissionColor="@color/deep_purple_A200"
                app:permissionButtonTitle="Grant access"
                app:permissionIcon="@drawable/ic_sd_storage"
                app:permissionTitle="@string/permission_title"
                app:permissionTitleNumber="1"
                app:permissionTitleSubTitle="@string/permission_summary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finish"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:paddingVertical="12dp"
        android:text="@string/lets_go"
        android:textAppearance="@style/TextViewButton"
        app:cornerRadius="8dp" />

</RelativeLayout>